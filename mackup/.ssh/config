Host *
  AddKeysToAgent yes
  UseKeychain yes

# Private GitHub instance
Host github
  User git
  HostName github.com
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/id_rsa

# Paradox Gitlab instance
Host gitlab-prod-01.paradox-interactive.com
  Preferredauthentications publickey
  IdentityFile ~/.ssh/id_rsa_paradox

# tretton37 Gitlab instance
Host gitlab.tretton37.com
  HostName gitlab.tretton37.com
  Preferredauthentications publickey
  IdentityFile ~/.ssh/id_rsa_private_gitlab
  User git